<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Article</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include("partials/navbar.ejs") %>
    <div class="container-img">
      <h2><%= article.title %></h2>
      <p>
        <%= article.Author.firstname %> <%= article.Author.lastname %> <%=
        article.createdAt %>
      </p>
      <img class="img-fluid mt-2"  src="<%= article.Author.image %>" alt="imagen del author">  
    </div>
    <p id="parrafo"><%= article.content %></p>

    <div class="mb-3">
      <h3 id="h3-comment">Add comment</h3>
      <form
        action="/comments/<%= article.id %> "
        method="post"
        id="form-comment"
      >
      <select class="form-select" aria-label="Default select example" name="author">
        <option selected>Open this select menu</option> 
        <% for (const user of author) { %>
          <option value= "<%= user.id %>" <%= user.firstname %> <%= user.lastname %></option>
        <% } %>
      </select>
        <textarea 
          class="form-control"
          id="content"
          rows="3"
          name="content"
        ></textarea>
        <button id="boton" class="btn btn-primary">Post</button>
      </form>
      <div class="comment-container">
        <h3 class="comment-h3">Comments</h3>
        <% for (const comment of comments) { %>
          <p class="postComment"><%= comment.content %> </p>
          <small id="small"> <%= comment.Author.firstname %> <%= comment.Author.lastname %> </small>
        <% } %>
      </div>
    </div>
    <%- include ("partials/footer") %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/06adc08716.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
